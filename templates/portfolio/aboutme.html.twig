{% extends 'base.html.twig' %}

{% set title = 'Elliot CARON' %}

{% block header %}
    <p>Navbar en position fixed</p>
{% endblock %}

{% block body %}
    <section>
        <div class="container">
            <div class="row">
                <div class="col text-center text-primary">
                    <h1>Ma formation</h1>
                    <br/>
                </div>
            </div>
            <div class="card-group">
                <div class="row">
                {% for formation in formations %}
                        <div class="card" style="width: 35rem; margin-left: 10px; margin-bottom: 10px;">
                            <img src="{{ asset('/images/' ~ formation.image.fichier) }}" class="card-img-top">
                            <div class="card-body">
                                <p class="card-text">{{ formation.description }}</p>
                            </div>
                            <div class="card-footer">
                                <span class="blockquote-footer">{{ formation.dateDebut }} -> {{ formation.dateFin }}</span>
                            </div>
                        </div>
                {% endfor %}
                </div>
            </div>
        </div>
    </section>
    <br/>
    <br/>
    <br/>

    <section>
    <div class="container-fluid">
        <div class="row">
            <div class="col text-center text-primary" >
                <h1>Qualit√©s</h1>
                <br/>
            </div>
        </div>
        <div class="row">
            {% for qualite in qualites %}
                <div class=" col-4 text-center">
                    <i class="{{ asset(qualite.icone.classe) }}"></i>
                    <div>
                        <h2>{{ qualite.nom }}</h2>
                        <p>{{ qualite.description }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    </section>
    <br/>
    <br/>
    <br/>

    <section>
        <div class="container-fluid">
            <div class="row">
                <div class="col text-center text-primary" >
                    <h1>Loisirs</h1>
                    <br/>
                </div>
            </div>
            <div class="row text-center">
                {% for loisir in loisirs %}
                    <div class="col-md-4 col-sm-12">
                        <h2>{{ loisir.nom }}</h2>
                        <p>{{ loisir.description }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <br/>
    <br/>
    <br/>
{% endblock %}
