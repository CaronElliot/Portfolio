{% extends 'base.html.twig' %}

{% set title = 'Elliot CARON' %}

{% block body %}
        <section>
            <div class="container">

                <div class="row">
                    <div class="col text-center text-primary my-4">
                        <h1>{{ projet.nom }}</h1>
                    </div>
                </div>

                <div class="row">
                    <p>{{ projet.description | raw }}</p>
                </div>

                <div class="row">
                    <div class="col-12">
                        <h3 class="text-primary">Technologies utilis√©es : </h3>
                    </div>


                    {% for technologie in projet.technologies %}
                    <div class="col-1">
                        <div class="card">
                            <img class="card-img-top text-center my-2" src="{{ asset('/images/' ~ technologie.image.fichier) }}" title="{{ technologie.nom }}">
                        </div>
                    </div>
                    {% endfor %}

                </div>

                <div class="row my-4">
                    <div class="col text-center">
                        <a class="btn btn-secondary btn-lg text-white" href="{{ projet.github }}">GITHUB <i class="fab fa-github"></i></a>
                    </div>
                </div>

                <div class="row">
                    <div id="carouselExampleControls" class="carousel slide col-12" data-ride="carousel">
                        <div class="carousel-inner">
                            {% for image in projet.images %}
                                {% if loop.first %}
                                    <div class="carousel-item active">
                                {% else %}
                                    <div class="carousel-item">
                                {% endif %}
                                    <img class="d-block w-100" src="{{ asset('/images/'~ image.fichier)}}">
                                </div>
                            {% endfor %}
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                        </div>
                    </div>
                </div>
            </div>
            <br/>
        </section>


{% endblock %}

