{% extends 'base.html.twig' %}

{% form_theme formDemande 'bootstrap_4_layout.html.twig' %}

{% set title = 'Elliot CARON' %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block body %}

    <section>
        <br/>
        <div class="container">
            <h1 class="text-primary text-center">Me contacter</h1>
            <hr class="hrbrown"/>
            {{ form_start(formDemande) }}

            {{ form_row(formDemande.nom_entreprise,{'label' : "Nom de l'entreprise",
                'required' : true,
                'attr' : {'placeholder' : "Nom de l'entreprise"}
            }) }}
            {{ form_row(formDemande.objectif,{'label' : "Message",
                'required' : true,
                'attr' : {'placeholder' : "Saisissez votre message"}
            }) }}
            {{ form_row(formDemande.email,{'label' : "Email",
                'required' : true,
                'attr' : {'placeholder' : "Email"}
            }) }}
            {{ form_row(formDemande.telephone,{'label' : "Numéro de téléphone (optionnel)",
                'required' :false,
                'attr' : {'placeholder' : "Numéro de téléphone"}
            }) }}

            <div class="offset-3 col-6 text-center pt-2">
                <button type="submit" class="btn btn-outline-primary btn-block btn-lg">
                    Envoyer <i class="fa fa-check-circle"></i>
                </button>
            </div>


            {{ form_end(formDemande) }}

        </div>
        <br/>
    </section>


{% endblock %}