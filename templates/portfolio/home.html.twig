{% extends 'base.html.twig' %}

{% set title = 'Elliot CARON' %}

{% block header %}
    {{ parent() }}
    <header id="banner" class="masthead d-flex">
        <div class="container my-auto">
            <div class="row">
                <div class="text-center col">
                    <h1 class="text-uppercase display-3 text-white">Elliot Caron</h1>
                    <h3 class="text-muted">Étudiant en informatique</h3>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block body %}
    <br/>
    <section>
        <div class="container-fluid">
            <div class="row">
                <div class="col text-center text-primary">
                    <h1>À propos de moi</h1>
                </div>
            </div>
            <div class="row">
                <div class="col text-center">
                    <p> Je m'appelle Elliot Caron.
                        <br/>Je suis étudiant en informatique à l'IUT de Lens.
                        <br/>J'ai 19 ans. >> <a href="{{ path('aboutme') }}">En savoir plus sur moi</a>
                    </p>
                </div>
            </div>
        </div>
    </section>
    <br/>
    <br/>
    <br/>


    <section>
        <div class="container">
            <div class="row">
                <div class="col text-center text-primary">
                    <h1>Mes Projets</h1>
                </div>
            </div>
            <br/>
            <div class="row text-center">
                {% for projet in projets %}
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <img src="{{ asset('/images/' ~ projet.couverture.fichier) }}" width="100%" height="70%">
                        <a href="{{ path('projet',{'id': projet.id})}}"><h4>{{ projet.nom }}</h4></a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <br/>
{% endblock %}


